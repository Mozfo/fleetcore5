// Generic lifecycle status for entities that can be active, inactive, or deprecated
// Used by: DIR (car_makes, platforms, vehicle_classes), ADM (tenant_vehicle_classes - future)
enum LifecycleStatus {
  active
  inactive
  deprecated

  @@map("lifecycle_status")
}

// ============================================================================
// TENANT & ADMINISTRATION ENUMS (shared across modules)
// ============================================================================

// Statut des tenants (organisations)
// Used by: ADM (tenants), BIL (facturation), tous les modules lisent le statut tenant
enum TenantStatus {
  trialing      // Période d'essai
  active        // Actif et payant
  suspended     // Suspendu (impayés ou violation)
  past_due      // En retard de paiement
  cancelled     // Annulé/Terminé

  @@map("tenant_status")
}

// Sévérité des logs d'audit
// Used by: ADM (audit_logs) et tous les modules qui génèrent des logs d'audit
enum AuditSeverity {
  info          // Information
  warning       // Avertissement
  error         // Erreur
  critical      // Critique

  @@map("audit_severity")
}

// Catégorie des logs d'audit
// Used by: ADM (audit_logs) et tous les modules qui génèrent des logs d'audit
enum AuditCategory {
  security      // Sécurité
  financial     // Financier
  compliance    // Conformité/Légal
  operational   // Opérationnel

  @@map("audit_category")
}

// Type d'acteur pour événements et actions
// Used by: ADM (tenant_lifecycle_events), autres modules pour traçabilité des actions
enum PerformedByType {
  system        // Action système automatique
  employee      // Action par employé FleetCore
  api           // Action via API externe

  @@map("performed_by_type")
}

